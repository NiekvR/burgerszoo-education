{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": [
    {
      "site": "burgers-zoo-academy",
      "public": "dist/burgerszoo-education",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "burgerszoo-education",
      "source": ".",
      "frameworksBackend": {}
    }
  ]
}